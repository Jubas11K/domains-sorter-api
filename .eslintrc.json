{
  "extends": ["standard", "prettier"],
  "plugins": [
    "babel",
    "standard",
    "promise",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "globals": {
    "$": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "prefer-arrow-callback": [
      "error",
      {
        "allowNamedFunctions": true
      }
    ],
    "consistent-return": 2,
    "no-var": 2,
    "new-cap": 0,
    "indent": 0,
    "no-else-return": 1,
    "semi": [
      1,
      "always"
    ],
    "space-unary-ops": 2,
    "no-undef": 1,
    "no-unused-vars": 1,
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true,
        "overrides": {
          "const": {
            "after": true
          }
        }
      }
    ],
    "space-before-function-paren": 0,
    "camelcase": 0,
    "handle-callback-err": [
      "error",
      "none"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}